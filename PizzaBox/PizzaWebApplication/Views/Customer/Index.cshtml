@model IEnumerable<PizzaWebApplication.Models.CustomerViewModel>
@{
    ViewData["Title"] = "Index";
}


<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<table>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lname)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderBy(e=>e.Lname))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Fname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lname)
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="StorePortal" asp-controller="Store">Back to List</a>

