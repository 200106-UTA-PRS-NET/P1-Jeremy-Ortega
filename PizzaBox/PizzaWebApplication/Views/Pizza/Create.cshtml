@model PizzaWebApplication.Models.PizzaViewModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create Pizza</h1>
<div class="row">
    <div class="col-md-4">
        @*@Html.BeginForm("Create","Customer",FormMethod.Post,antiforgery:true)*@
        <form asp-action="ViewOrder" asp-controller="Order">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Toppings" class="control-label"></label>
                <input type="number" min="0" max="31" asp-for="Toppings" class="form-control" />
                <span asp-validation-for="Toppings" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Crust" class="control-label">Choose Cheesy, Thin, or DeepDish {1, 2, 3}</label>
                <input type="number" min="0" max="3" asp-for="Crust" class="form-control" />
                <span asp-validation-for="Crust" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Size" class="control-label">Choose Small, Medium, Large {1, 2, 3}</label>
                <input type="number" min="0" max="3" asp-for="Size" class="form-control" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
