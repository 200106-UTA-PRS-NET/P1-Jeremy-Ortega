@model PizzaWebApplication.Models.TempCustomerOrder

@{
    ViewData["Title"] = "CreateNewPizza";
}

<h1>CreateNewPizza</h1>

<h4>PizzaOrderCypher</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateNewPizza" asp-controller="Pizza">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="Size1">Size</label>
                <select class="form-control" id="Size1" name="Size">
                    <option value=1>Twelve Inch</option>
                    <option value=2>Fifteen Inch</option>
                    <option value=3>Twenty Inch</option>
                </select>
            </div>

            <div class="form-group">
                <label for="Crust1">Crust</label>
                <select class="form-control" id="Crust1" name="Crust">
                    <option value=1>Thin</option>
                    <option value=2>Deep Dish</option>
                    <option value=3>Cheese Filled</option>
                </select>
            </div>

            <div class="form-check">
                <input type="radio" class="form-check-input" id="materialGroupExample1" name="pizza">
                <label class="form-check-label" for="materialGroupExample1" value="Cheese">Cheese</label>
            </div>
            <!-- Group of material radios - option 2 -->
            <div class="form-check">
                <input type="radio" class="form-check-input" id="materialGroupExample2" name="pizza" checked>
                <label class="form-check-label" for="materialGroupExample2" value="Pepperoni">Pepperoni</label>
            </div>
            <!-- Group of material radios - option 3 -->
            <div class="form-check">
                <input type="radio" class="form-check-input" id="materialGroupExample3" name="pizza">
                <label class="form-check-label" for="materialGroupExample3" value="Sausage">Sausage</label>
            </div>
            <!-- Group of material radios - option 4 -->
            <div class="form-check">
                <input type="radio" class="form-check-input" id="materialGroupExample4" name="pizza">
                <label class="form-check-label" for="materialGroupExample3" value="Meat Lovers">Meat Lovers</label>
            </div>
            <!-- Group of material radios - option 5 -->
            <div class="form-check">
                <input type="radio" class="form-check-input" id="materialGroupExample5" name="pizza">
                <label class="form-check-label" for="materialGroupExample3" value="Hawaiian">Hawaiian</label>
            </div>


            <div class="form-group">
                <input type="submit" value="Create Pizza" class="btn btn-primary" />
            </div>

            <div class="form-group">
                <input type=number name=number min=1 max=100 class="form-control" id="exampleFormControlInput1" placeholder="Number Of Pizzas">
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Create" asp-controller="Order">Proceed to Checkout</a>
</div>

<div class="text-center">
    @*<button onclick="location.href='@Url.Action("Create", "Customer")'" type="button" class="btn btn-primary">Sign Up</button>*@
    <button onclick="location.href='@Url.Action("StorePortal", "Store")'" type="button" class="btn btn-primary">Return to Store Portal</button>
</div>




