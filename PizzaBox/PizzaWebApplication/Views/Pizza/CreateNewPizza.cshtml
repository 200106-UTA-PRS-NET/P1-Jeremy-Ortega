@model PizzaWebApplication.Models.TempCustomerOrder

@{
    ViewData["Title"] = "CreateNewPizza";
}

<h1>CreateNewPizza</h1>

<h4>PizzaOrderCypher</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CompleteOrder" asp-controller="Pizza">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="Size1">Size</label>
                <select class="form-control" id="Size1">
                    <option>Twelve Inch</option>
                    <option>Fifteen Inch</option>
                    <option>Twenty Inch</option>
                </select>
            </div>

            <div class="form-group">
                <label for="Crust1">Crust</label>
                <select class="form-control" id="Crust1">
                    <option>Thin</option>
                    <option>Deep Dish</option>
                    <option>Cheese Filled</option>
                </select>
            </div>

            <div class="form-check form-check-inline">
                <input name="Sauce" class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
                <label class="form-check-label" for="inlineCheckbox1">Sauce</label>
            </div>
            <div class="form-check form-check-inline">
                <input name="Cheese" class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2">
                <label class="form-check-label" for="inlineCheckbox2">Cheese</label>
            </div>
            <div class="form-check form-check-inline">
                <input name="Pepperoni" class="form-check-input" type="checkbox" id="inlineCheckbox3" value="option3">
                <label class="form-check-label" for="inlineCheckbox3" >Pepperoni</label>
            </div>
            <div class="form-check form-check-inline">
                <input name="Sausage" class="form-check-input" type="checkbox" id="inlineCheckbox4" value="option4">
                <label class="form-check-label" for="inlineCheckbox4">Sausage</label>
            </div>
            <div class="form-check form-check-inline">
                <input name="Pineapple" class="form-check-input" type="checkbox" id="inlineCheckbox5" value="option5">
                <label class="form-check-label" for="inlineCheckbox5">Pineapple</label>
            </div>

            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

