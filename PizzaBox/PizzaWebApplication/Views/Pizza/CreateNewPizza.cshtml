@model PizzaWebApplication.Models.TempCustomerOrder

@{
    Layout = "_LayoutPortal";
    ViewData["Title"] = "CreateNewPizza";
}

<h1>Create Custom Pizza</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateNewPizza" asp-controller="Pizza">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="Size1">Size</label>
                <select class="form-control" id="Size1" name="Size">
                    <option value=1>Twelve Inch</option>
                    <option value=2>Fifteen Inch</option>
                    <option value=3>Twenty Inch</option>
                </select>
            </div>

            <div class="form-group">
                <label for="Crust1">Crust</label>
                <select class="form-control" id="Crust1" name="Crust">
                    <option value=1>Thin</option>
                    <option value=2>Deep Dish</option>
                    <option value=3>Cheese Filled</option>
                </select>
            </div>

            <div class="form-check form-check-inline">
                <input name="Sauce" class="form-check-input" type="checkbox" id="inlineCheckbox1" value=true>
                <label class="form-check-label" for="inlineCheckbox1">Sauce</label>
            </div>
            <div class="form-check form-check-inline">
                <input name="Cheese" class="form-check-input" type="checkbox" id="inlineCheckbox2" value=true>
                <label class="form-check-label" for="inlineCheckbox2">Cheese</label>
            </div>
            <div class="form-check form-check-inline">
                <input name="Pepperoni" class="form-check-input" type="checkbox" id="inlineCheckbox3" value=true>
                <label class="form-check-label" for="inlineCheckbox3">Pepperoni</label>
            </div>
            <div class="form-check form-check-inline">
                <input name="Sausage" class="form-check-input" type="checkbox" id="inlineCheckbox4" value=true>
                <label class="form-check-label" for="inlineCheckbox4">Sausage</label>
            </div>
            <div class="form-check form-check-inline">
                <input name="Pineapple" class="form-check-input" type="checkbox" id="inlineCheckbox5" value=true>
                <label class="form-check-label" for="inlineCheckbox5">Pineapple</label>
            </div>

            <div class="form-group">
                <input type=number name=number min=1 max=100 class="form-control" id="exampleFormControlInput1" placeholder="Number Of Pizzas">
            </div>

            <div class="form-group">
                <input type="submit" value="Create Pizza" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>


<div>
    <a asp-action="Create" asp-controller="Order">Proceed to Checkout</a>
</div>


<div class="text-center">
    @*<button onclick="location.href='@Url.Action("Create", "Customer")'" type="button" class="btn btn-primary">Sign Up</button>*@
    <button onclick="location.href='@Url.Action("StorePortal", "Store")'" type="button" class="btn btn-primary">Return to Store Portal</button>
</div>


